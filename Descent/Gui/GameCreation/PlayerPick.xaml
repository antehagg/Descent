<Page x:Class="Descent.Gui.GameCreation.PlayerPick"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Descent.Gui.GameCreation"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PlayerPick">

    <Grid Background="#FFEAEAEA">
        <Button x:Name="CreateButton" Content="Add" HorizontalAlignment="Left" Margin="92,34,0,0" VerticalAlignment="Top" Width="75" Click="CreateButton_Click"/>
        <CheckBox x:Name="AiCheckBox" Content="Ai" HorizontalAlignment="Left" Margin="47,37,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="NameTextBox"  HorizontalAlignment="Left" Height="23" Margin="47,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="PlayerListBox" HorizontalAlignment="Left" Height="119" Margin="47,59,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Name"/>
        <Button x:Name="Remove" Content="Remove" HorizontalAlignment="Left" Margin="92,183,0,0" VerticalAlignment="Top" Width="75" Click="Remove_Click"/>

    </Grid>
</Page>
